<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="25pt"
        android:background="@drawable/back_gradint">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="5.5"
            android:background="@drawable/ripple_color"
            android:clickable="true"
            android:gravity="center"
            android:onClick="goBack">

            <ImageView
                android:id="@+id/menuLeft"
                android:layout_width="11pt"
                android:layout_height="11pt"
                app:srcCompat="@drawable/ic_back" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center">

                <vts.snystems.sns.vts.fonts.MyTextViewNormal
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Immobiliser"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:textColor="@color/colorWhite" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="4"
                android:gravity="center">

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">


                <android.support.v7.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="5pt"
                    android:clickable="true"
                    card_view:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_margin="5dp"
                        android:orientation="vertical">

                        <vts.snystems.sns.vts.fonts.MyTextViewSmiBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Warning ! Please read very carefully."
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                            android:textColor="@android:color/holo_red_dark" />

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="0.1pt"
                            android:layout_marginTop="3pt"
                            android:background="@color/rippleColor" />

                        <vts.snystems.sns.vts.fonts.MyTextViewNormal
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5pt"
                            android:layout_marginTop="3pt"
                            android:text="- Be very careful when using the immobiliser." />

                        <vts.snystems.sns.vts.fonts.MyTextViewNormal
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5pt"
                            android:layout_marginTop="3pt"
                            android:text="- Improper usage can result in untoward incidents." />

                        <vts.snystems.sns.vts.fonts.MyTextViewNormal
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5pt"
                            android:layout_marginTop="3pt"
                            android:text="- Only immobilise when the vehicle is either stopped or at low speed not more than 20-25 kmph." />

                        <vts.snystems.sns.vts.fonts.MyTextViewNormal
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5pt"
                            android:layout_marginTop="3pt"
                            android:text="- Immobilising at higher speeds might result in an accident" />

                        <vts.snystems.sns.vts.fonts.MyTextViewNormal
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5pt"
                            android:layout_marginTop="3pt"
                            android:text="- Benosys can not be held and will not be held liable or responsible for any incident whatsoever" />

                        <vts.snystems.sns.vts.fonts.MyTextViewNormal
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5pt"
                            android:layout_marginTop="3pt"
                            android:text="- After the vehicle has been successfully immobilsed, alert will be displayed on the top of the screen.If alert is not received fire immobilse command again" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="5pt"
                    android:clickable="true"
                    card_view:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="25pt"
                        android:background="@drawable/ripple_effect"
                        android:onClick="selectVehicleNumber"
                        android:clickable="true"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1">

                            <vts.snystems.sns.vts.fonts.MyTextViewNormal
                                android:id="@+id/vehicleNumberTxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="5pt"
                                android:text="Select vehicle number"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:gravity="center"
                            android:layout_weight="6">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_play_arrow_black_24dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/vInfoCardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="5pt"
                    android:clickable="true"
                    android:visibility="gone"
                    card_view:cardElevation="2dp">
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="4"
                                android:gravity="center">

                                <ImageView
                                    android:id="@+id/img_vehicles"
                                    android:layout_width="fill_parent"
                                    android:layout_height="25pt"
                                    android:layout_gravity="center_vertical|center_horizontal"
                                    android:layout_weight="2"
                                    app:srcCompat="@drawable/ic_car" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <vts.snystems.sns.vts.fonts.MyTextViewSmiBold
                                        android:id="@+id/vNumberTxt"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/vehicle_number"
                                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

                                    <vts.snystems.sns.vts.fonts.MyTextViewNormal
                                        android:id="@+id/vTargetName"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="2pt"
                                        android:text="Target Name" />
                                </LinearLayout>


                                <vts.snystems.sns.vts.fonts.MyTextViewNormal
                                    android:id="@+id/vCurrAdress"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:maxLines="2"
                                    android:text="@string/address" />

                                <vts.snystems.sns.vts.fonts.MyTextViewNormal
                                    android:id="@+id/vLastDt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/last_update_dt" />

                                <View
                                    android:layout_width="fill_parent"
                                    android:layout_height="3pt" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="17pt"
                            android:background="@color/colorWhite"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/liveTrackingLi"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_marginRight="0.1pt"
                                android:layout_weight="1"
                                android:background="@color/colorPrimaryDark"
                                android:clickable="true"
                                android:gravity="center">

                                <vts.snystems.sns.vts.fonts.MyTextViewNormal
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawableLeft="@drawable/ic_live_track"
                                    android:drawablePadding="5dp"
                                    android:gravity="center_vertical"
                                    android:text="Immobilise"
                                    android:textColor="@color/colorWhite" />

                            </LinearLayout>



                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="3pt"/>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</LinearLayout>
