<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"

    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="100pt"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="15pt"
            android:gravity="center"
            android:background="@color/colorPrimaryDark">
            <vts.snystems.sns.vts.fonts.MyTextViewSmiBold
                android:id="@+id/deviceImeiTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3pt"
                android:textColor="@color/colorWhite"
                android:text="Device Imei"/>

        </LinearLayout>



        <vts.snystems.sns.vts.fonts.MyTextViewNormal
            android:id="@+id/vNumberTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="2pt"
            android:drawableLeft="@drawable/ic_devic_number_24dp"
            android:drawablePadding="4dp"
            android:text="Vehicle Number"
            app:layout_constraintTop_toTopOf="parent"/>

        <vts.snystems.sns.vts.fonts.MyTextViewNormal
            android:id="@+id/vSpeedTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:drawableLeft="@drawable/ic_speed_24dp"
            android:drawablePadding="4dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/vNumberTextView"
            android:text="Vehicle Speed"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />
        <vts.snystems.sns.vts.fonts.MyTextViewNormal
            android:id="@+id/deviceStatusTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/ic_device_staus_24dp"
            android:drawablePadding="4dp"
            android:text="Device Status"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/vSpeedTextView"/>
        <vts.snystems.sns.vts.fonts.MyTextViewNormal
            android:id="@+id/accStatusTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/ic_acc_status_24dp"
            android:drawablePadding="4dp"
            android:text="Acc Status"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/deviceStatusTextView"/>
        <!--<vts.snystems.sns.vts.fonts.MyTextViewNormal
            android:id="@+id/coOrdinateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Co-Ordinate"
            android:visibility=""
            android:drawableLeft="@drawable/ic_coordinate_24dp"
            android:drawablePadding="4dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/accStatusTextView"/>-->
        <vts.snystems.sns.vts.fonts.MyTextViewNormal
            android:id="@+id/lastLocationTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Last Location"
            android:ellipsize="end"
            android:maxLines="2"
            android:drawableLeft="@drawable/ic_last_location"
            android:drawablePadding="4dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/coOrdinateTextView"/>
        <vts.snystems.sns.vts.fonts.MyTextViewNormal
            android:id="@+id/lastTrackTimeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Last Tracked Time"
            android:drawableLeft="@drawable/ic_last_track_time_24dp"
            android:drawablePadding="4dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lastLocationTextView"/>

    </LinearLayout>



</RelativeLayout>
