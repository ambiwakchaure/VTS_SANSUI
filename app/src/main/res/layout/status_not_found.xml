<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rel_no_data"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_no_data"
        android:layout_width="45pt"
        android:layout_height="45pt"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_format_align_center_black_48dp" />

    <vts.snystems.sns.vts.fonts.MyTextViewSmiBold
        android:id="@+id/txt_error_no_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_no_data"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:text="@string/oops_live_status_not_found"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textColor="@color/rippleColor" />

    <vts.snystems.sns.vts.fonts.MyButtonNormal
        android:id="@+id/buttonRefresh"
        android:layout_width="wrap_content"
        android:layout_height="15pt"
        android:layout_marginTop="10dp"
        android:background="@drawable/back_gradint"
        android:text="@string/refresh"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:visibility="gone" />
</LinearLayout>
